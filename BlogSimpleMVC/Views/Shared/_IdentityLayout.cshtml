<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="A blog posting website for users to create, publish and share their blog posts">
    <meta name="author" content="Prabdeep Dhaliwal">

    <title>@ViewData["Title"] - BlogSimple</title>

    <!-- Bootstrap core CSS -->
    <link href="~/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Custom fonts for this template -->
    <link href="~/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>

    <!-- Custom styles for this template -->
    <link href="~/css/clean-blog.min.css" rel="stylesheet">
</head>
<body>

    @await Component.InvokeAsync("Navigation")

    <header class="masthead" style="background-image: url('@ViewData["HeaderImage"]')">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto">
                    <div class="post-heading">
                        <h1>@ViewData["HeaderTitle"]</h1>
                        <br />
                        @if (ViewData["SubHeader"] is null)
                        {
                            <span class="meta">
                                Posted by
                                <a asp-controller="Home" asp-action="Author" asp-route-authorId="@ViewData["AuthorId"]">@ViewData["AuthorName"]</a>
                                on @ViewData["PostDate"]
                            </span> 
                        }
                        else
                        {
                            <span class="subheading">@ViewData["SubHeader"]</span>
                            <div class="container">
                                <div class="row">
                                    <div class="col-lg-8 col-md-10 mx-auto">
                                        <ul class="list-inline text-center">
                                            @if (ViewData["LinkedIn"] is not null)
                                            {
                                            <li class="list-inline-item">
                                                <a href="@ViewData["LinkedIn"]" target="_blank">
                                                    <span class="fa-stack fa-lg">
                                                        <i class="fas fa-circle fa-stack-2x"></i>
                                                        <i class="fab fa-linkedin fa-stack-1x fa-inverse"></i>
                                                    </span>
                                                </a>
                                            </li>
                                            }
                                            @if (ViewData["Twitter"] is not null)
                                            {
                                            <li class="list-inline-item">
                                                <a href="@ViewData["Twitter"]" target="_blank">
                                                    <span class="fa-stack fa-lg">
                                                        <i class="fas fa-circle fa-stack-2x"></i>
                                                        <i class="fab fa-linkedin fa-stack-1x fa-inverse"></i>
                                                    </span>
                                                </a>
                                            </li>
                                            }
                                            @if (ViewData["Facebook"] is not null)
                                            {
                                            <li class="list-inline-item">
                                                <a href="@ViewData["Facebook"]" target="_blank">
                                                    <span class="fa-stack fa-lg">
                                                        <i class="fas fa-circle fa-stack-2x"></i>
                                                        <i class="fab fa-linkedin fa-stack-1x fa-inverse"></i>
                                                    </span>
                                                </a>
                                            </li>
                                            }
                                            @if (ViewData["PortfolioWebsite"] is not null)
                                            {
                                            <li class="list-inline-item">
                                                <a href="@ViewData["PortfolioWebsite"]" target="_blank">
                                                    <span class="fa-stack fa-lg">
                                                        <i class="fas fa-circle fa-stack-2x"></i>
                                                        <i class="fab fa-linkedin fa-stack-1x fa-inverse"></i>
                                                    </span>
                                                </a>
                                            </li>
                                            }
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="content">
        @RenderBody()
    </div>

    @await Component.InvokeAsync("Footer")
    <script src="~/vendor/jquery/jquery.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/clean-blog.min.js"></script>
    <script src="https://apis.google.com/js/platform.js" async defer></script>
    @RenderSection("Scripts", required: false)
</body>

</html>

